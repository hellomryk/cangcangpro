// pages/sudi/index.js
var _this = null, url ="https://chronic-api-part.infobigdata.com";
Page({

    /**
     * 页面的初始数据
     */
    data: {
        list: [],//type  list
        list1: [],//列表
    },
    kindToggle: function (e) {
        var id = e.currentTarget.id, list = _this.data.list;
        console.log(id)
        for (var i = 0, len = list.length; i < len; ++i) {
            if (list[i].id == id) {
                list[i].checked = !list[i].checked;
                //type   list
                wx.request({
                    url: url + '/api/disease/article/queryArticleList',
                    data: {
                        // keyword: list[i].typename,
                        typeId: list[i].id
                    },
                    header: {
                        'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
                    },
                    method: "POST",
                    success: function (res) {
                        console.log(res.data)
                        if (res.data.code == 0) {
                            _this.setData({
                                list1: res.data.data.list,
                            });
                        }

                    }
                })
            }
            else {
                list[i].checked = false
            }
        }
        console.log(list)
        _this.setData({
            list: list,

        });
    },
    /**
     * 生命周期函数--监听页面加载
     */
    onLoad: function (options) {
     _this=this;
        
//type   list
        wx.request({
            url: url+'/api/disease/article/queryArticleTypeList',
            data: {
            },
            header: {
                'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
            },
            method: "POST",
            success: function (res) {
                console.log(res.data)
                if (res.data.code==0){
                    
                    _this.setData({
                        list: res.data.data.list,
                    });
                    _this.data.list[0].checked = true;
                    _this.setData({
                        list:_this.data.list,
                    });
                    //type   list
                    wx.request({
                        url: url + '/api/disease/article/queryArticleList',
                        data: {
                         // keyword: list[i].typename,
                            typeId: 1
                        },
                        header: {
                            'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
                        },
                        method: "POST",
                        success: function (res) {
                            console.log(res.data)
                            if (res.data.code == 0) {
                                _this.setData({
                                    list1: res.data.data.list,
                                });
                            }

                        }
                    })
                }

            }
        })
    },

    /**
     * 生命周期函数--监听页面初次渲染完成
     */
    onReady: function () {

    },

    /**
     * 生命周期函数--监听页面显示
