        open: false,
      }
    ]
  },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    _this = this;
    _this.setData({
      src: options.src
    })
  },
  select(e) {
    var id = e.target.id;
      var arr = _this.data.array;
      for(var i = 0; i < arr.length; i ++) {
        if (arr[i].id == id) {
          arr[i].open = true;
        } else {
          arr[i].open = false
        }
      }
    _this.setData({
      array:arr
    })
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
