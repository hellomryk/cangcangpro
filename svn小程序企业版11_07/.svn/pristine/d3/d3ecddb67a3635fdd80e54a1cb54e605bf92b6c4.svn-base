// pages/uploadimg/uploadimg.js
var app = app = getApp(), _this = null, url ="https://chronic-api-part.infobigdata.com";

Page({

    /**
     * 页面的初始数据
     */
    data: {
        disName: "",//疾病名称
        nickName: "",//用户名称
        avatarUrl: '',//用户头像
        userId: '',//用户id
        text:'',
      text1: true,
    },



    xiangqing: function () {
        console.log(4)
        wx.navigateTo({
            url: '/pages/zhenduanbaogao_ps/index',
        })
    },
    baocun: function () {
        console.log(5)
        wx.request({
            url: url + '/api/photoSysInfo/save',
            data: {
                basicinfo: _this.data.nickName,
                openid: app.globalData.openId,
                questioningsymptoms: _this.data.disName,
                recordtype: 0,
                status: 1,
            },
            header: {
                'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
            },
            method: "POST",
            success: function (res) {
                console.log(res.data)
                wx.showToast({
                    title: res.data.msg,
                    icon: 'none',
                    duration: 1000
                })

            }
        })
    },
    /**
     * 生命周期函数--监听页面加载
     */
    onLoad: function(options) {
        _this = this;
        console.log(1111111111)
        console.log(app.globalData.photodesise)
        // _this.setData({
        //     userId: wx.getStorageSync('userid')
        // });
        // if (_this.data.userId == "") {


        // } else {
        //     console.log(11)
            //获取登陆用户名
            wx.getSetting({
                success: function (res) {
                    if (res.authSetting['scope.userInfo']) {
                        // 已经授权，可以直接调用 getUserInfo 获取头像昵称
                        wx.getUserInfo({
                            success: function (res) {
                                console.log(11)
                                console.log(res)
                             
                                _this.setData({
                                    nickName: res.userInfo.nickName,
                                    avatarUrl: res.userInfo.avatarUrl,
                                })
                            }
                        })
                    }
                }
            })

        // }


         _this.setData({
             disName: app.globalData.photodesise
        });
        wx.request({
            url: url+'/api/photoSysInfo/symptoms',
            data: {
                // disName: "舌质淡白，苔滑少津|血虚"
                 disName: app.globalData.photodesise
            },
            header: {
                'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
            },
            method: "POST",
            success: function (res) {
                console.log(res.data)
              if (res.data.data.list) {
                _this.setData({
                  text: res.data.data.list[0].value
                });
              }else{
                _this.setData({
                  text: "暂无详细信息",
                  text1: false
                });
              }


            }
        })
    },

    /**
     * 生命周期函数--监听页面初次渲染完成
     */
    onReady: function() {

    },

    /**
     * 生命周期函数--监听页面显示
     */
    onShow: function() {

    },

    /**
     * 生命周期函数--监听页面隐藏
     */
    onHide: function() {

    },

    /**
     * 生命周期函数--监听页面卸载
     */
    onUnload: function() {

    },

    /**
     * 页面相关事件处理函数--监听用户下拉动作
     */
    onPullDownRefresh: function() {

    },

    /**
     * 页面上拉触底事件的处理函数
     */
    onReachBottom: function() {

    },

    /**
     * 用户点击右上角分享
     */
    onShareAppMessage: function() {

    }
})