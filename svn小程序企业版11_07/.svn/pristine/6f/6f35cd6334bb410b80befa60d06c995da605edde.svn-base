/* pages/sudi/index.wxss */
.search{
    width: 100%;
    height: 105rpx;
    background: #14c86c;
    padding-top: 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    text-align: left;
    position: relative;
}

.search input{
    width: 92%;
    height: 65rpx;
    background: #fff;
    border-radius: 8rpx;
    margin: 0 auto;
      box-sizing: border-box;
    padding-left: 60rpx;
}
.flsb_img{
    width: 24rpx;
    height: 23rpx;
    position: absolute;
   left:60rpx;
   top:43rpx;
   z-index:999;

}

.shangcheng_head_list {
    white-space: nowrap;
    display: flex;
    width: 100%;
    height: 95rpx;
    padding: 0 3%;
    background: #fff;
    border-bottom: 1rpx solid #e7e7e7;
    box-sizing: border-box;
}

.shangcheng_head_li {
    display: inline-block;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 27rpx;
    font-size: 32rpx;
    color: #141414;
}

.li_y {
    border-bottom: 1rpx solid #15c86c;
    color: #15c86c;
}
.li_box{
    width: 95%;
    margin-left: 5%;
    border-bottom: 1rpx solid #ddd;
    float: left;
    padding: 35rpx 20rpx 35rpx 0;
    box-sizing: border-box;
}
.li_images{
    width: 225rpx;
    height: 150rpx;
    float: left;
}
.li_text{
    width: 460rpx;
    float: left;
    padding-right: 20rpx;
    box-sizing: border-box;
}
.text_head{
    width: 100%;
    float: left;
    font-size: 32rpx;
    color: #141414;
    
}
.text_ps{
    width: 100%;
    float: left;
    font-size: 24rpx;
    color: #999;
    margin-top: 60rpx;
}
.re{
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    border:1rpx solid #15c86c ;
    border-radius: 8rpx;
    text-align: center;
    line-height: 30rpx;
    color: #15c86c;
}
.ps_ps{
    margin-left: 15rpx;
}