// pages/sudi_ps/index.js
var _this = null, url = "https://chronic-api-part.infobigdata.com";
var WxParse = require('../../wxParse/wxParse.js');

Page({

    /**
     * 页面的初始数据
     */
    data: {
        list:[],
        list1: [],
        good:true,
        bad: true,
    },
    good:function(){
        if (_this.data.good){
            wx.request({
                url: url + '/api/disease/article/editPost',
                data: {
                    goodorbad: 1,
                    id: _this.data.list.id
                },
                header: {
                    'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
                },
                method: "POST",
                success: function (res) {
                    console.log(res.data)
                    if (res.data.code == 0) {
                        _this.data.list.goodpost = Number(_this.data.list.goodpost) + 1
                        _this.setData({
                            list: _this.data.list,
                            good:false
                        });
                    }

                }
            })
        }else{
            wx.showToast({
                title:"不能重复点赞哦！",
                icon: 'none',
                duration: 1000
            })
        }

   },
    low: function () {
        if (_this.data.bad){
            wx.request({
                url: url + '/api/disease/article/editPost',
                data: {
                    goodorbad: 2,
                    id: _this.data.list.id
                },
                header: {
                    'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
                },
                method: "POST",
                success: function (res) {
                    console.log(res.data)
                    if (res.data.code == 0) {
                        _this.data.list.badpost = Number(_this.data.list.badpost) - 1
                        _this.setData({
                            list: _this.data.list,
                            bad: false
                        });
                    }

                }
            })
        }else{
            wx.showToast({
                title: "不能重复踩哦！",
                icon: 'none',
                duration: 1000
            })
        }

    },
    /**
     * 生命周期函数--监听页面加载
     */
    onLoad: function (options) {
        _this = this;
        wx.request({
            url: url + '/api/disease/article/editClick',
            data: {
                id: options.id
            },
            header: {
                'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
            },
            method: "POST",
            success: function (res) {
                console.log(res.data)

            }
        })
        //type   list
        wx.request({
            url: url + '/api/disease/article/getArticle',
            data: {
                aid: options.id
            },
            header: {
                'content-type': 'application/x-www-form-urlencoded' // 默认值application/json
            },
            method: "POST",
            success: function (res) {
                console.log(res.data)
                if (res.data.code == 0) {
                    var article = res.data.data.article.content;
                    WxParse.wxParse('article', 'html', article,_this, 5);
                    _this.setData({
                        list: res.data.data.article,
                        list1: res.data.data.list,
                    });
                }

            }
        })
    },

    /**
     * 生命周期函数--监听页面初次渲染完成
     */
    onReady: function () {

    },

    /**
     * 生命周期函数--监听页面显示
     */
    onShow: function () {

    },

    /**
     * 生命周期函数--监听页面隐藏
     */
    onHide: function () {

    },

    /**
     * 生命周期函数--监听页面卸载
     */
    onUnload: function () {

    },

    /**
     * 页面相关事件处理函数--监听用户下拉动作
     */
    onPullDownRefresh: function () {

    },

    /**
     * 页面上拉触底事件的处理函数
     */
    onReachBottom: function () {

    },

    /**
     * 用户点击右上角分享
     */
    onShareAppMessage: function () {

    }
})