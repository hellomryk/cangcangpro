                <view>
                    <text class='leave_text'>{{day?dayArray[dayIndex]:"选择您的性别"}} </text>
                    <image src='/pics/weidu_xia.png' class='leave_img'></image>
                </view>
            </picker>
        </view>
<view style="clear:both;"></view>
