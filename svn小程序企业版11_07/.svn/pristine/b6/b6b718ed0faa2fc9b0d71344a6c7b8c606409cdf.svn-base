<!--pages/wodexinxi/index.wxml-->
<view class='head'>
<view class='head_list'>
<text>姓名</text>  <input placeholder='请填写您的姓名' value="{{name}}" bindblur='input'></input>
</view>

        <view class="row-wrap">
            <view class="label">
                <text class='leave_warning'></text>性别</view>
