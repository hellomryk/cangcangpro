/* pages/xinzheng/index.wxss */

page {
    overflow-y: visible !important;
    -webkit-overflow-scrolling: touch;
    overflow-scrolling: touch;
}
.box{
    height: 100%;
     overflow-x: hidden; 
     overflow-y: auto; 
    -webkit-overflow-scrolling: touch;
    overflow-scrolling: touch;
    position: relative;
}


.yuce_gailv {
    width: 100%;
    margin: 30rpx 0;
    font-size: 32rpx;
    padding: 0 30rpx;
    color: #141414;
    box-sizing: border-box;
}

.yuce_gailv image {
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    margin-right: 15rpx;
}

.yuce_gailv_head {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    margin-bottom: 15rpx;
}

.baifenbi {
    padding: 5rpx 15rpx;
    border: 1px solid rgb(130, 180, 137);
    border-radius: 100rpx;
    font-size: 24rpx;
    color: #15c86c;
}

.name_ci {
    margin-left: 20rpx;
    font-size: 30rpx;
    color: #15c86c;
}

.yuce_gailv_con {
    width: 90%;
    font-size: 24rpx;
    color: #999;
    float: left;
}

.yuce_gailv_head image {
    width: 40rpx;
    height: 40rpx;
    float: right;

}

.zhuzheng_head {
    width: 100%;
    padding: 40rpx;
    box-sizing: border-box;
    text-align: left;
    /* font-weight: 600; */
    font-size: 32rpx;
    padding-bottom: 0;
    color: #141414;
    border-top: 1px solid #ddd;
}

.service_selection {
    width: 100%;
    padding: 40rpx;
    box-sizing: border-box;
}

.checkbox {
    float: left;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
    height: 65rpx;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    box-sizing: border-box;
    color: #999;
}

.service_selection .back {
    background: #15c86c;
    color: #fff;
    border: 1rpx solid #15c86c;
}

.service_selection .item {
    float: left;
    margin: 0 20rpx 20rpx 0;
}

.but {
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    background: #15c86c;
    margin: 0 auto;
    color: #fff;
    margin-top: 10%;
    margin-bottom: 30rpx;
}

.group {
    max-height: 360rpx;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    overflow-scrolling: touch;
    margin-bottom: 25rpx;
}

.contai {
    width: 94%;
    height: 400rpx;
    margin-top: 30rpx;
}

ec-canvas {
    width: 100%;
    height: 100%;
}
