/* pages/paizhenlist/index.wxss */


page {
    background: #fff;
}

.wenzhen_list {
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 40rpx;
}

.wenzhen_li {
    width: 320rpx;
    height: 260rpx;
    background: #fff;
    border-radius: 8rpx;
    float: left;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #141414;
    line-height: 155rpx;
}

.wenzhen_li:nth-child(odd) {
    margin-right: 30rpx;
}

.wenzhen_li image {
    width: 150rpx;
    height: 150rpx;
    margin-left: 85rpx;
    float: left;
}
.wenzhen_li view {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    float: left;
    font-size: 32rpx;
    color: #141414;
    text-align: center;
}
